{
	"manifest_version": 2,
	"name": "obli",
	"version": "0.0.01",
	"content_scripts": [
		{
			"all_frames": true, 
            "js": [
                "inc/jquery-offset.min.js",
                "src/webinterface.js"
            ],
			"matches": ["<all_urls>"],
            "run_at": "document_start"
		}
	],
	"permissions": [
		"tabs",
		"unlimitedStorage",
        "storage",
        "<all_urls>"
	],
    "commands": {
        "show_dialog": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "Execute an obli script for debugging"
        }
    },
    "browser_action": {},
    "background": {
        "scripts": ["inc/socket.io.js", "src/background.js"],
        "persistent": true
    },
    "options_page": "src/web/options.html"
}
